<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_amount_label" />

    <EditText android:id="@+id/transaction_amount"
        android:lines="1"
        android:layout_marginTop="2dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_title_label" />

    <EditText android:id="@+id/transaction_title"
        android:maxLines="1"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
      	android:ems="25"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_date_label" />

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">

		<Button android:id="@+id/create_date"
		    android:layout_weight="0.7"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />

		<Button android:id="@+id/create_time"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
